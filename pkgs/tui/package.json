    "jotai": "^2.12.4",
    "qrcode": "^1.5.4",
    "react": "^18",
    "react-dom": "^19",
    "xoswap": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
