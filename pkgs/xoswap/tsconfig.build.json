// tsconfig.build.json
{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "http": ["../http"],
      "types": ["./types"],
      "xo": ["./xo"]
    },
    "rootDir": "src"
  }
}
